{
	"name": "versakit-react",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"preinstall": "node script/enforce-pnpm.js",
		"prepare": "lefthook install",
		"build": "rollup -c",
		"build:watch": "rollup -c --watch",
		"build:shared": "rollup -c --environment PACKAGE:shared",
		"build:components": "rollup -c --environment PACKAGE:components",
		"clean": "rimraf packages/*/dist",
		"lint": "biome check .",
		"lint:fix": "biome check --write --unsafe .",
		"format": "biome format --write .",
		"commitlint": "commitlint --from HEAD~1 --to HEAD --verbose",
		"type-check": "tsc --noEmit",
		"type-check:watch": "tsc --noEmit --watch",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:components": "vitest --config vitest.config.ts packages/versakit-components",
		"playground:dev": "pnpm --filter @versakit/playground dev",
		"playground:build": "pnpm --filter @versakit/playground build",
		"playground:preview": "pnpm --filter @versakit/playground preview",
		"build-storybook": "pnpm --filter @versakit/storybook build-storybook",
		"storybook:dev": "pnpm --filter @versakit/storybook storybook",
		"info": "node script/project-info.js"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.15.0",
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@rollup/plugin-commonjs": "^28.0.1",
		"@rollup/plugin-node-resolve": "^16.0.0",
		"@rollup/plugin-typescript": "^12.1.1",
		"@testing-library/jest-dom": "6.8.0",
		"@testing-library/react": "16.3.0",
		"@testing-library/user-event": "14.6.1",
		"@types/node": "^24.5.2",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"@vitest/ui": "3.2.4",
		"jsdom": "27.0.0",
		"lefthook": "^1.13.1",
		"lint-staged": "^16.1.6",
		"rimraf": "^6.0.1",
		"rollup": "^4.29.1",
		"rollup-plugin-dts": "^6.1.1",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"typescript": "^5.9.2",
		"vitest": "3.2.4"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"biome check --write --unsafe",
			"biome format --write"
		],
		"*.{json,md}": [
			"biome format --write"
		],
		"package.json": [
			"biome format --write"
		]
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1"
	}
}
