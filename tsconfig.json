{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		"baseUrl": ".",
		"paths": {
			"@versakit/components": ["./packages/versakit-components/src"],
			"@versakit/components/*": ["./packages/versakit-components/src/*"],
			"@versakit/cli": ["./packages/versakit-cli/src"],
			"@versakit/cli/*": ["./packages/versakit-cli/src/*"],
			"@versakit/shared": ["./packages/versakit-shared/src"],
			"@versakit/shared/*": ["./packages/versakit-shared/src/*"]
		}
	},
	"include": [
		"packages/*/src/**/*",
		"packages/*/src/**/*.ts",
		"packages/*/src/**/*.tsx",
		"packages/**/*.ts",
		"packages/**/*.tsx"
	],
	"exclude": ["node_modules", "**/node_modules", "**/dist", "**/build", "**/lib"]
}
