# 使用 pnpm 作为包管理器
engine-strict=true

# 提升安装性能
prefer-offline=true
prefer-frozen-lockfile=true

# 在 monorepo 中启用工作区功能
link-workspace-packages=true

# 启用依赖提升以解决 Storybook 等工具的兼容性问题  https://stackoverflow.com/questions/75958361/storybook-failed-to-load-preset-storybook-react-vite-preset
shamefully-hoist=true

# 提高安装速度
network-concurrency=16
child-concurrency=4

# 自动安装 peer dependencies
auto-install-peers=true

# 严格的 peer dependencies 检查
strict-peer-dependencies=false

# 保存精确版本号
save-exact=true

# 禁用遥测
disable-telemetry=true